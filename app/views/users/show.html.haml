.main
  .main-left
    = link_to "トップへ戻る", root_path
    .tweet-home
      #{@user.nickname}さんのツイート
      .tweets
        = render partial: "users/tweet",collection: @tweets
        = paginate @tweets
  .main-right
    .profile.clearfix
      .profile__avatar
        = image_tag("noimage.jpeg", class:"avatar")
      .profile__username
        = @user.nickname
    %table
      %tr
        %td
          100
        %td
          100
        %td
          = @user.tweets.count
      %tr.profile-title
        %td.followed
          フォロー
          %br
          されている
        %td.following
          フォロー
          %br
          している
        %td.num-of-tweets
          投稿数


